{
	"compilerOptions": {
		"declaration": true,
		"target": "es2019",
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"exclude": [
		"dist/",
		"test/",
		"app/",
		"node_modules/"
	],
	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts",
		"types.d.ts",
		"index.ts"
	],
	"ts-node": {
		"files": true,
		// Do not forget to `npm i -D tsconfig-paths`
		"require": [
			"tsconfig-paths/register"
		]
	},
}